<nav aria-label="blog-pagination">
    <ol>
        <li>
            {% if page.url != pagination.href.first %}
                <a href="{{ pagination.href.first }}">First</a>
                {% else %}First{% endif %}
        </li>
        <li>
            {% if pagination.href.previous %}
                <a href="{{ pagination.href.previous }}">Prev</a>
                {% else %}Prev{% endif %}
        </li>
        {%- for pageEntry in pagination.pages %}
            <li>
                {% if page.url == pagination.hrefs[ loop.index0 ] %}
                {{ loop.index }}
                {% else %}
                <a href="{{ pagination.hrefs[ loop.index0 ] }}"  aria-current="page" >{{ loop.index }}</a>
                {% endif %}
            </li>
        {%- endfor %}
        <li>
            {% if pagination.href.next %}
                <a href="{{ pagination.href.next }}">Next</a>
                {% else %}Next{% endif %}
        </li>
        <li>
            {% if page.url != pagination.href.last %}
                <a href="{{ pagination.href.last }}">Last</a>
                {% else %}Last{% endif %}
        </li>
    </ol>
</nav>
