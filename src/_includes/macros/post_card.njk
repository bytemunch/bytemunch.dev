{% macro from(post) %}
    <div class="post-card">
        <a href="{{ post.url }}">
            <div class="thumbnail">
                <img src="/blog/img/{{ post.data.thumbnail }}" alt="post thumbnail"/>
            </div>
            <div class="info">
                <h2>{{ post.data.title }}</h2>
                <p>{{ post.data.description }}</p>
            </div>
        </a>
    </div>
{% endmacro %}