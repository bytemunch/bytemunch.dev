{% macro from(post) %}
    <a href="{{ post.url }}" class="post-link">
        <div class="thumbnail">
            <img src="/blog/img/{{ post.data.thumbnail }}" alt="post thumbnail"/>
        </div>
        <div class="info">
            <h2>{{ post.data.title }}</h2>
            <p>{{ post.data.description }}</p>
            <p class="date">{{ post.data.date | readableDate }}</p>
        </div>
    </a>
{% endmacro %}