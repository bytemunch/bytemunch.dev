{% macro from(project) %}
    <div class="project-card">
        <a href="{{ project.url }}">
            <div class="thumbnail">
                <img src="/projects/{{ project.data.title|replace(" ","_") }}/img/thumb.png" alt="project thumbnail"/>
            </div>
            <div class="info">
                <h2>{{ project.data.title }}</h2>
                <p>{{ project.data.description }}</p>
            </div>
        </a>
        <div class="links">
            {% if project.data.link %}
                <a href="{{ project.data.link }}">check it out</a>
                {% if project.data.repo %}|{% endif %}
            {% endif %}
            {% if project.data.repo %}
                <a href="{{ project.data.repo }}">repo</a>
            {% endif %}
        </div>
    </div>
{% endmacro %}